{
    "taskIdentifier"            : "PlaqueSurfaceArea",
    "schemaIdentifier"          : "PlaqueSurfaceArea",
    "progressMarkers":[],
    "steps":
    [
        {
            "identifier":"plaqueInstruction",
            "type":"instruction",
            "title":"Body plaque coverage",
            "text":"Select all areas on your body that currently have plaques.",
            "image":{
                "type": "animated",
                "imageNames": ["PlaqueCoverage1", "PlaqueCoverage2", "PlaqueCoverage3", "PlaqueCoverage4"],
                "placementType": "topMarginBackground",
                "animationDuration": 4.0
            },
            "actions":{
                "goForward":{
                    "type":"default",
                    "buttonTitle":"Begin"
                }
            }
        },
        {
            "identifier": "plaqueSelection",
            "type": "form",
            "title": "Which areas have psoriasis?",
            "text": "Select all areas of your body that currently have psoriasis.",
            "actions":{
                "goForward":{
                    "type":"default",
                    "buttonTitle":"Continue"
                }
            },
            "inputFields": [
                {
                    "uiHint": "list",
                    "type": "multipleChoice.string",
                    "choices": [
                        {
                            "text": "Front: Above the waist",
                            "value": "aboveTheWaistFront"
                        },
                        {
                            "text": "Front: Below the waist",
                            "value": "belowTheWaistFront"
                        },
                        {
                            "text": "Back: Above the waist",
                            "value": "aboveTheWaistBack"
                        },
                        {
                            "text": "Back: Below the waist",
                            "value": "belowTheWaistBack"
                        },
                        {
                            "text": "No areas are affected",
                            "isExclusive": true
                        }
                    ]
                }
            ]
        },
        {
            "identifier":"aboveTheWaistFront",
            "type":"plaqueSurfaceArea",
            "title":"Draw areas that have plaques",
            "image":{
                "type":"fetchable",
                "imageName": "PlaqueAboveTheWaistFront",
