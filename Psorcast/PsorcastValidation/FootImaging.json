{
    "taskIdentifier"            : "FootImaging",
    "schemaIdentifier"          : "FootImaging",
    "progressMarkers":[],
    "steps":
    [
        {
            "identifier": "introduction",
            "type":"overview",
            "title":"Toes Photo",
            "text":"In this activity you will photograph your bare feet with your toe in focus in order to track any changes which may come about.",
            "image": {
                "type":"fetchable",
                "imageName":"Foot1",
                "placementType":"topBackground"
            },
            "icons": [
                {
                    "icon":"BareFeetIcon",
                    "title": "BARE FEET"
                },
                {
                    "icon":"FlatFloorIcon",
                    "title": "A FLAT FLOOR"
                }
            ],
            "actions": {
                "goForward":{
                    "type":"default",
                    "buttonTitle":"Get Started"
                },
                "skip":{
                    "type":"reminder",
                    "reminderIdentifier":"FootImaging"
                },
                "learnMore": {
                    "type": "videoView",
                    "buttonTitle" : "See this in action",
                    "url": "ToesPhoto.mov"
                }
            }
        },
        {
            "identifier":"footInstruction1",
            "type":"instruction",
            "title":"Bare feet",
            "text":"Let’s first begin by photographing the toes on a flat surface. You should not be wearing any socks, sandals or shoes for this activity.",
            "image":{
                "type":"fetchable",
                "imageName": "Foot1",
                "placementType":"topBackground"
            },
            "actions":{
                "goForward":{
                    "type":"default",
                    "buttonTitle":"I’ve got bare feet now"
                }
            },
            "shouldHideActions": ["goBackward"]
        },
        {
            "identifier":"footInstruction2",
            "type":"instruction",
            "title":"Capture from directly above",
            "text":"Splay out your toes and capture them as closely as you can from directly above, and not at an angle. Your toenails should be in focus.",
            "image":{
                "type":"fetchable",
                "imageName": "Foot2",
                "placementType":"topBackground"
            },
            "actions":{
                "goForward":{
                    "type":"default",
                    "buttonTitle":"Capture left toes"
                }
            },
            "shouldHideActions": ["goBackward"]
        },
        {
            "identifier"    : "leftFoot",
            "type"          : "imageCapture",
            "title"         : "Left Toes"
        },
        {
            "identifier":"footInstruction3",
            "type":"instruction",
            "title":"Capture from directly above",
            "text":"Splay out your toes and capture them as closely as you can from directly above and not at an angle. Your toenails should be in focus.",
            "image":{
                "type":"fetchable",
                "imageName": "HeaderFootRight",
                "placementType":"topBackground"
            },
            "actions":{
                "goForward":{
                    "type":"default",
                    "buttonTitle":"Capture right toes"
                }
            },
            "shouldHideActions": ["goBackward"]
        },
        {
            "identifier"    : "rightFoot",
            "type"          : "imageCapture",
            "title"         : "Right Toes"
        },
        {
            "identifier":"completion",
            "type":"imageCaptureCompletion",
            "title":"Toes Photos Complete",
            "text":"You have completed the toes photo activity. By imaging your toes, we can notice any changes in swelling or nail invovlement.",
            "leftImageIdentifier": "leftFoot",
            "rightImageIdentifier": "rightFoot",
            "actions": {
                "goForward":{
                    "type":"default",
                    "buttonTitle":"Done"
                }
            },
            "shouldHideActions": ["goBackward", "cancel"]
        }
    ]
}
